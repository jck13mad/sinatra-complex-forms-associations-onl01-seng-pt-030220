<h1>Create a new Pet</h1>
<form method="POST" action="/pets">
  <label>Pet Name:</label>
  <br>
  <input type="text" id="pet[name]" name="pet[name]">
  <br><br>
  
 <p>Select an existing pet or create a new one below.</p>
 
 <% @owners.each do |o| %>
    <input type="radio" name="pet[owner_id]" id="<%= o.id %>" value="<%= o.id %>"><%= o.name %><br>
  <% end %>
    
  <br>
  <h3>New Owner</h3>
  <label>Owner Name:</label>
  <input type="text" id="owner_name" name="owner[name]">
</form>
